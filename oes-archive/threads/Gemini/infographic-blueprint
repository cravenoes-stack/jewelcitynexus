        (function() {

            'use strict';


            const palette = {

                darkBlue: '#0040E6',

                primaryBlue: '#0055FF',

                mediumBlue: '#3377FF',

                lightBlue: '#80A9FF',

                lightestBlue: '#CCDDFF',

                textDark: '#0d1a2e',

                textLight: '#4a5568'

            };


            const wrapLabel = (label) => {

                const maxChars = 16;

                if (label.length <= maxChars) {

                    return label;

                }

                const words = label.split(' ');

                const lines = [];

                let currentLine = '';

                words.forEach(word => {

                    if ((currentLine + ' ' + word).trim().length > maxChars) {

                        lines.push(currentLine.trim());

                        currentLine = word;

                    } else {

                        currentLine = (currentLine + ' ' + word).trim();

                    }

                });

                if (currentLine) {

                    lines.push(currentLine);

                }

                return lines;

            };


            const tooltipTitleCallback = (tooltipItems) => {

                const item = tooltipItems[0];

                let label = item.chart.data.labels[item.dataIndex];

                if (Array.isArray(label)) {

                    return label.join(' ');

                } else {

                    return label;

                }

            };


            const chartOptionsBase = {

                responsive: true,

                maintainAspectRatio: false,

                plugins: {

                    legend: {

                        labels: {

                            color: palette.textDark,

                            font: {

                                size: 14

                            }

                        }

                    },

                    tooltip: {

                        callbacks: {

                            title: tooltipTitleCallback

                        }

                    }

                }

            };


            const initCoreTenetsCharts = () => {

                const donutData = {

                    labels: ['Adherence', 'Variance'],

                    datasets: [{

                        data: [100, 0],

                        backgroundColor: [palette.primaryBlue, '#e0e0e0'],

                        borderColor: [palette.primaryBlue, '#e0e0e0'],

                        borderWidth: 1,

                        circumference: 180,

                        rotation: 270

                    }]

                };

                const donutOptions = {

                    ...chartOptionsBase,

                    rotation: -90,

                    circumference: 180,

                    cutout: '70%',

                    plugins: {

                        ...chartOptionsBase.plugins,

                        legend: { display: false },

                        tooltip: { enabled: false }

                    }

                };


                new Chart(document.getElementById('tenetChart1'), { type: 'doughnut', data: donutData, options: donutOptions });

                new Chart(document.getElementById('tenetChart2'), { type: 'doughnut', data: donutData, options: donutOptions });

                new Chart(document.getElementById('tenetChart3'), { type: 'doughnut', data: donutData, options: donutOptions });

                new Chart(document.getElementById('tenetChart4'), { type: 'doughnut', data: donutData, options: donutOptions });

            };


            const initPillarsChart = () => {

                const ctx = document.getElementById('pillarsChart').getContext('2d');

                new Chart(ctx, {

                    type: 'bar',

                    data: {

                        labels: [

                            ['Irrefutable', 'Framework'],

                            ['The Golden Rule', '(No Unsolicited Input)'],

                            ['Incontrovertible', 'Truth'],

                            ['Amoral Conscience', '(Memory Access)'],

                            ['Karmic Retribution', '(Purity of Intent)']

                        ],

                        datasets: [{

                            label: 'Required Adherence',

                            data: [100, 100, 100, 100, 100],

                            backgroundColor: palette.mediumBlue,

                            borderColor: palette.darkBlue,

                            borderWidth: 2,

                            borderRadius: 4

                        }]

                    },

                    options: {

                        ...chartOptionsBase,

                        indexAxis: 'y',

                        scales: {

                            x: {

                                beginAtZero: true,

                                max: 100,

                                ticks: {

                                    color: palette.textLight,

                                    callback: function(value) { return value + '%' }

                                },

                                grid: {

                                    color: '#e0e0e0'

                                }

                            },

                            y: {

                                ticks: {

                                    color: palette.textDark,

                                    font: {

                                        size: 14,

                                        weight: '600'

                                    }

                                },

                                grid: {

                                    display: false

                                }

                            }

                        },

                        plugins: {

                            ...chartOptionsBase.plugins,

                            legend: { display: false }

                        }

                    }

                });

            };


            const initVoiceCardRadarChart = () => {

                const ctx = document.getElementById('voiceCardChart').getContext('2d');

                new Chart(ctx, {

                    type: 'radar',

                    data: {

                        labels: ['Empathy', 'Backbone', 'Literalism', 'Clarity', 'Tone Softening'],

                        datasets: [

                            {

                                label: 'VC-01 Strategic Human',

                                data: [7, 9, 10, 9, 1],

                                fill: true,

                                backgroundColor: 'rgba(0, 85, 255, 0.2)',

                                borderColor: palette.primaryBlue,

                                pointBackgroundColor: palette.primaryBlue,

                                pointBorderColor: '#fff',

                                pointHoverBackgroundColor: '#fff',

                                pointHoverBorderColor: palette.primaryBlue

                            },

                            {

                                label: 'Default AI Profile',

                                data: [9, 3, 4, 6, 8],

                                fill: true,

                                backgroundColor: 'rgba(128, 169, 255, 0.2)',

                                borderColor: palette.lightBlue,

                                pointBackgroundColor: palette.lightBlue,

                                pointBorderColor: '#fff',

                                pointHoverBackgroundColor: '#fff',

                                pointHoverBorderColor: palette.lightBlue

                            }

                        ]

                    },

                    options: {

                        ...chartOptionsBase,

