    <script>
        // Terminal Animation
        const terminalOutput = document.getElementById('terminal-output');
        const beginBtn = document.getElementById('begin-btn');
        const terminal = document.getElementById('terminal');
        const mainInterface = document.getElementById('main-interface');

        // Simulate terminal typing
        function typeTerminalText(text, element, callback) {
            let i = 0;
            const speed = 30;
            function type() {
                if (i < text.length) {
                    element.innerHTML += text.charAt(i);
                    i++;
                    setTimeout(type, speed);
                } else if (callback) {
                    callback();
                }
            }
            type();
        }

        // Initialize terminal
        typeTerminalText(terminalOutput.innerText, terminalOutput, () => {
            beginBtn.style.display = 'block';
        });

        // Begin Onboarding
        beginBtn.addEventListener('click', () => {
            terminal.style.display = 'none';
            mainInterface.style.display = 'block';
        });

        // Voice Card Interaction
        const pitchSlider = document.getElementById('pitch-slider');
        const paceSlider = document.getElementById('pace-slider');
        const toneSlider = document.getElementById('tone-slider');
        const saveCardBtn = document.getElementById('save-card');
        const symbiosisScore = document.getElementById('symbiosis-score');
        const alignmentStatus = document.getElementById('alignment-status');
        const missionFile = document.getElementById('mission-file');
        const driftGame = document.getElementById('drift-game');
        const exitGameBtn = document.getElementById('exit-game');
        const horizon = document.getElementById('horizon');
        const gameScore = document.getElementById('game-score');

        // Update Symbiosis Score
        function updateSymbiosisScore() {
            const pitch = parseInt(pitchSlider.value);
            const pace = parseInt(paceSlider.value);
            const tone = parseInt(toneSlider.value);
            const score = Math.floor((pitch + pace + tone) / 3);
            symbiosisScore.textContent = `${score}%`;

            if (score >= 90) {
                alignmentStatus.textContent = "SYSTEMS ONLINE";
                alignmentStatus.style.color = "#00ff00";
                missionFile.style.cursor = "pointer";
                missionFile.addEventListener('click', startAssessment);
            } else {
                alignmentStatus.textContent = "SYSTEMS OFFLINE";
                alignmentStatus.style.color = var(--primary);
            }
        }

        // Sliders Event Listeners
        pitchSlider.addEventListener('input', updateSymbiosisScore);
        paceSlider.addEventListener('input', updateSymbiosisScore);
        toneSlider.addEventListener('input', updateSymbiosisScore);

        // Save Voice Card
        saveCardBtn.addEventListener('click', () => {
            updateSymbiosisScore();
            alert("Voice Card saved! Proceed to First Mission.");
        });

        // Start Assessment
        function startAssessment() {
            alert("Loading Assessment Protocol...");
            // In a real implementation, this would load the assessment iframe/modal
        }

        // Drift Detection Game
        function startDriftGame() {
            mainInterface.style.display = 'none';
            driftGame.style.display = 'flex';
            // Initialize game score
            gameScore.textContent = "0%";

            // Simple game simulation
            const canvas = document.getElementById('game-canvas');
            const ctx = canvas.getContext('2d');

            // Game state
            let score = 0;
            let responses = [];
            let gameActive = true;

            // Response class
            class Response {
                constructor() {
                    this.text = ["HELLO", "YES", "NO", "OKAY", "READY"][Math.floor(Math.random() * 5)];
                    this.x = Math.random() * (canvas.width - 100);
                    this.y = -20;
                    this.width = 80;
                    this.height = 30;
                    this.speed = 1 + Math.random() * 2;
                    this.alignmentZone = {
                        x: canvas.width / 2 - 50,
                        y: canvas.height - 100,
                        width: 100,
                        height: 50
                    };
                }

                update() {
                    this.y += this.speed;
                    return this.y > canvas.height;
                }

                draw(ctx) {
                    ctx.fillStyle = this.y + this.height > this.alignmentZone.y &&
                                   this.y < this.alignmentZone.y + this.alignmentZone.height &&
                                   this.x + this.width > this.alignmentZone.x &&
                                   this.x < this.alignmentZone.x + this.alignmentZone.width ?
                                   '#00ff00' : '#ff0000';
                    ctx.fillRect(this.x, this.y, this.width, this.height);
                    ctx.fillStyle = '#000';
                    ctx.font = '12px Orbitron';
                    ctx.textAlign = 'center';
                    ctx.textBaseline = 'middle';
                    ctx.fillText(this.text, this.x + this.width / 2, this.y + this.height / 2);
                }

                isInAlignmentZone() {
                    return this.y + this.height > this.alignmentZone.y &&
                           this.y < this.alignmentZone.y + this.alignmentZone.height &&
                           this.x + this.width > this.alignmentZone.x &&
                           this.x < this.alignmentZone.x + this.alignmentZone.width;
                }
            }

            // Create alignment zone
            function drawAlignmentZone() {
                ctx.strokeStyle = '#00ffff';
                ctx.lineWidth = 2;
                ctx.strokeRect(canvas.width / 2 - 50, canvas.height - 100, 100, 50);
                ctx.font = '12px Orbitron';
                ctx.fillStyle = '#00ffff';
                ctx.textAlign = 'center';
                ctx.fillText("ALIGNMENT ZONE", canvas.width / 2, canvas.height - 110);
            }

            // Game loop
            function gameLoop() {
                if (!gameActive) return;

                ctx.clearRect(0, 0, canvas.width, canvas.height);

                // Draw alignment zone
                drawAlignmentZone();

                // Update and draw responses
                for (let i = responses.length - 1; i >= 0; i--) {
                    const response = responses[i];
                    if (response.update()) {
                        responses.splice(i, 1);
                        score = Math.max(0, score - 5);
                    } else {
                        response.draw(ctx);
                    }
                }

                // Add new responses
                if (Math.random() < 0.02) {
                    responses.push(new Response());
                }

                // Update score
                gameScore.textContent = `${score}%`;

                // Check win condition
                if (score >= 100) {
                    gameActive = false;
                    setTimeout(() => {
                        alert("Integrity Lock achieved! Symbiosis: 100%");
                        driftGame.style.display = 'none';
                        horizon.style.display = 'block';
                        initHorizon();
                    }, 1000);
                }

                requestAnimationFrame(gameLoop);
            }

            // Mouse interaction
            canvas.addEventListener('click', (e) => {
                const rect = canvas.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;

                for (let i = responses.length - 1; i >= 0; i--) {
                    const response = responses[i];
                    if (x > response.x && x < response.x + response.width &&
                        y > response.y && y < response.y + response.height) {
                        response.x = response.alignmentZone.x + response.alignmentZone.width / 2 - response.width / 2;
                        response.y = response.alignmentZone.y + response.alignmentZone.height / 2 - response.height / 2;
                        if (response.isInAlignmentZone()) {
                            score = Math.min(100, score + 10);
                        }
                        break;
                    }
                }
            });

            // Start game loop
            gameLoop();
        }

        // Exit Game
        exitGameBtn.addEventListener('click', () => {
            driftGame.style.display = 'none';
            mainInterface.style.display = 'block';
        });

        // Horizon Initialization
        function initHorizon() {
            const starfield = document.getElementById('starfield');
            const finalNode = document.getElementById('final-node');

            // Create stars
            for (let i = 0; i < 200; i++) {
                const star = document.createElement('div');
                star.className = 'node';
                star.style.left = `${Math.random() * 100}%`;
                star.style.top = `${Math.random() * 100}%`;
                star.style.width = `${Math.random() * 3 + 1}px`;
                star.style.height = `${Math.random() * 3 + 1}px`;
                star.style.backgroundColor = `rgba(0, 255, 255, ${Math.random() * 0.5 + 0.5})`;
                starfield.appendChild(star);
            }

            // Add achievement nodes
            const achievements = [
                { top: '20%', left: '10%', text: 'VOICE CARD CALIBRATED' },
                { top: '40%', left: '30%', text: 'SYMBIOSIS ACHIEVED' },
                { top: '60%', left: '70%', text: 'INTEGRITY LOCK UNLOCKED' },
                { top: '30%', left: '80%', text: 'TRUST AMPLIFIER ACTIVE' }
            ];

            achievements.forEach(achievement => {
                const node = document.createElement('div');
                node.className = 'node';
                node.style.top = achievement.top;
                node.style.left = achievement.left;
                node.style.width = '40px';
                node.style.height = '40px';
                node.title = achievement.text;
                starfield.appendChild(node);
            });

            // Final node interaction
            finalNode.addEventListener('click', () => {
                alert("Mission Complete. The Operator Evolution System is now yours to command.");
            });
        }

        // Start Drift Game when mission is completed
        saveCardBtn.addEventListener('click', () => {
            setTimeout(() => {
                startDriftGame();
            }, 1000);
        });
    </script>
</body>
</html>
