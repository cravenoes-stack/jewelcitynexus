    <script>
        // Simple drag-and-drop for Voice Card traits
        const traits = document.querySelectorAll('.trait');
        traits.forEach(trait => {
            trait.addEventListener('dragstart', () => {
                trait.classList.add('dragging');
            });
            trait.addEventListener('dragend', () => {
                trait.classList.remove('dragging');
            });
        });
